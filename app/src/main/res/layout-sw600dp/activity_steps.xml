<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">

  <fragment
      android:id="@+id/recipe.fragment.steps"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2"
      class="com.github.riyaz.bakingapp.screens.steps.fragments.StepListFragment" />

  <fragment
      android:id="@+id/recipe.fragment.detail"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      class="com.github.riyaz.bakingapp.screens.steps.fragments.StepDetailFragment" />
</LinearLayout>